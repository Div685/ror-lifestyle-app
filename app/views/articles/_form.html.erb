<%= simple_form_for(@article) do |f| %>
  <%= f.error_notification %>
    <% @article.errors.full_messages.each do |error| %>
        <div class="alert alert-danger">
          <%= error %>
        </div>
    <% end %>

  <div class="d-flex">
      <div class="w-100 my-2 ">

        <%= f.input :title,
         required: true,
         label: "Title: ", 
         input_html: { class: "form-control "},
         wrapper: false, 
         label_html: {class: "lable "},
          placeholder: "Title" %> <br>

          <div class="m-0 p-0 d-flex justify-content-between col-9">
            <strong class="m-0">Categories</strong>
            <strong class="d-flex justify-content-end ">select one or multiple categories from list</strong>
          </div>

          <div class="form-group d-flex justify-content-between">
            <%= f.collection_select(:category_ids, Category.all, :id, :name, {}, {:multiple => true, :include_blank => true,:class => 'form-control js-example-basic-multiple col-9', required: true }) %>
            <%= link_to 'Create Category', new_category_path, class: "cat-button" %>
          </div>
          

        <%= f.input :text,
          required: true,
          label: "Text: ",
          :input_html => { 'rows' => 5, 'cols' => 10, class: "p-3 form-control"},
          wrapper: false,
          label_html: { class: "label "},
          autofocus: true,
          placeholder: "Compose a new Article..."
        %>

        <%# <%= f.file_field :image, as: :file,
          required: true,
          label: "Image: ",
          label_html: { class: ''}, 
          wrapper: false, 
          input_html: {class: "form-control"}
          %>
            <br />

          <%= f.file_field :image, as: :file, input_html: { class: 'form-control' }, wrapper: false%>
          
      </div>

  </div>
  <%= f.button :submit, class: "btn signup-button mb-3 my-1 text-white" %>

<% end %>

<% if @article.image.attached? %>
            <%= image_tag @article.image, style: 'width: 200px; display: block' %>
          <% end %>
        