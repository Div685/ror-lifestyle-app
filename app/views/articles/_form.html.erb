<%= simple_form_for(@article) do |f| %>
  <%= f.error_notification %>
    <% @article.errors.full_messages.each do |error| %>
        <div class="alert alert-danger">
          <%= error %>
        </div>
    <% end %>

  <div class="d-flex">
      <div class="w-100 my-2 ">

        <%= f.input :title,
         required: true,
         label: "Title: ", 
         input_html: { class: "form-control "},
         wrapper: false, 
         label_html: {class: "lable "},
          placeholder: "Title" %> <br>

          <div class="d-flex justify-content-between">
            <strong class="">Categories</strong>
            <strong class="d-flex justify-content-end">select one or multiple categories from list</strong>
          </div>

          <div class="form-group">
            <%= f.collection_select(:category_ids, Category.all, :id, :name, {}, {:multiple => true, :include_blank => false, :class => 'form-control selectpicker' }) %>
            <br>
          </div>
          

        <%= f.input :text,
          required: true,
          label: "Text: ",
          :input_html => { 'rows' => 5, 'cols' => 10, class: "p-3 form-control"},
          wrapper: false,
          label_html: { class: "label "},
          autofocus: true,
          placeholder: "Compose a new Article..."
        %>

        <%= f.input :image,
          required: true,
          label: "Image: ",
          label_html: { class: ''}, 
          wrapper: false, 
          input_html: {class: "form-control"},
          placeholder: "Add an Image URL" %>
          <br />
          
      </div>

  </div>
  <%= f.button :submit, class: "btn signup-button mb-3 my-1 text-white" %>

<% end %>