<div class="hero-section">
  <div class="hero-image">
    <figure>
      <img src="<%= url_for(@article.image) %>" alt="img-hero">
      <figcaption><%= @article.title %></figcaption>
      <p> <%= @article.text.truncate(100) %> </p>
    </figure>
  </div>
</div>
<div class="category-list">
  <div class="category-grid-view">
    <% @categories.each do |category| %>

      <div class="p-0 m-0">
        <figure>
          <img src="<%= url_for(category.articles.last.image) %>" alt="img-category" />
          <%=link_to category.name, categories_path,class: "category-title-link" %>
          <figcaption><%= category.articles.last.title %></figcaption>
        </figure>
        
          
      </div>
    <% end %>
  </div>
</div>

  
