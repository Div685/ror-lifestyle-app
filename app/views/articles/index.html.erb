<div class="hero-section">
  <div class="hero-image">
    <figure>
      <img src="https://vitalplanet.com/wp-content/uploads/84726686_s.jpg" alt="img-hero">
      <figcaption><%=link_to @article.title, article_path(@article) %></figcaption>
      <p> <%= @article.text.truncate(100) %> </p>
    </figure>
  </div>
</div>
<div class="category-list">
  <div class="category-grid-view">
    <% @categories.each do |category| %>

      <div class="figure p-0 m-0">
        <figure>
          <img src="https://secure.img1-fg.wfcdn.com/im/53299221/compr-r85/4307/43074449/hanging-pug-puppy-statue.jpg" alt="img-category" />
          <%=link_to category.name, category_path(category),class: "category-title-link" %>
          <figcaption><%=link_to category.articles.last.title, article_path(category.articles.last) %></figcaption>
        </figure>   
      </div>

    <% end %>
  </div>
</div>

  
