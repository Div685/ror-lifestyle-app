<section class="main-category-show">
  <div class="title">
    <h2><%= @category.name %> </h2>
  </div>
  <div class="grid-show-article">
    <% @category.articles.each do |article| %>
    
    <article>
      <div class="image-article col-6 pl-0">
          <% if article.image.attached? %>
            <img src="<%= url_for(article.image) %>" alt="img">
          <% end %>
      </div>
      <div class="content-article col-6 pr-0">
        <h4 class="linkk">
          <%=link_to article.title, article_path(article) %>
        </h4>
        <p class="mr-2 text-white" >
          <%= article.text %>
        </p>
      </div>
    </article>
    <% end %>
  </div>
</section>